@import "../../base/fn";

.wui-select-box {
  display flex
  align-items center
}

.wui-select-outline {
  display flex
  align-items center
  justify-content center
  width 18px
  height 18px
  border 1px solid #ccc
  border-radius 100%
  cursor pointer
  margin 0 10px
}

.wui-select-innerline {
  width 8px
  height 8px
  border-radius 100%
  border 1px solid #ccc
}

.wui-select-innerline-active {
  background #dd5050
  border 1px solid #dd5050
}

.wui-select-innerline-disabled {
  background #EBEBE4
  border 1px solid #EBEBE4
  pointer-events none
}